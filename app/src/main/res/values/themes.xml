<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 应用主题 -->
    <style name="Theme.TaskMasterAI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- 次要颜色 -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_light</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- 背景颜色 -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- 文本颜色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- 卡片样式 -->
        <item name="cardBackgroundColor">@color/card_background</item>
        
        <!-- 分隔线颜色 -->
        <item name="android:listDivider">@color/divider</item>
        
        <!-- 启用视图转换 -->
        <item name="android:windowActivityTransitions">true</item>
        
        <!-- 启用共享元素转换 -->
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>
    
    <!-- 无ActionBar的主题 -->
    <style name="Theme.TaskMasterAI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- 文本输入布局样式 -->
    <style name="Widget.TaskMasterAI.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
    
    <!-- 按钮样式 -->
    <style name="Widget.TaskMasterAI.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- 文本按钮样式 -->
    <style name="Widget.TaskMasterAI.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
    </style>
    
    <!-- 卡片样式 -->
    <style name="Widget.TaskMasterAI.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- 底部导航样式 -->
    <style name="Widget.TaskMasterAI.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemRippleColor">@color/primary_light</item>
    </style>
    
    <!-- 浮动操作按钮样式 -->
    <style name="Widget.TaskMasterAI.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="tint">@android:color/white</item>
    </style>
    
    <!-- 标题文本样式 -->
    <style name="TextAppearance.TaskMasterAI.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- 副标题文本样式 -->
    <style name="TextAppearance.TaskMasterAI.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- 正文文本样式 -->
    <style name="TextAppearance.TaskMasterAI.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
